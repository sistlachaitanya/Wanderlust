<% layout("layouts/boilerplate.ejs") -%>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <div class="card show-card listing-card">
      <h4 class="card-title"><%= listing.title %></h4>
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">Owned by <%= listing.owner.username %></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
      <%if(currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="btns">
        <form method="GET" action="/listings/<%= listing._id %>/edit">
          <button class="btn btn-dark offset-2">Edit</button>
        </form>
        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=DELETE"
        >
          <button class="btn btn-danger offset-3">Delete</button>
        </form>
      </div>
      <% } %>
    </div>

    <% if(currUser) {%>
    <div>
      <h4>We'd Love Your Feedback</h4>
      <form
        method="POST"
        action="/listings/<%= listing._id %>/reviews"
        class="needs-validation"
        novalidate
      >
        <div class="mt-4 mb-2">
          <label for="rating" class="form-label form-range">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <div class="mt-2 mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            class="form-control"
            name="review[comment]"
            id="comment"
            rows="5"
            cols="50"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for reviews
          </div>
        </div>
        <button class="btn btn-outline-dark mb-3">Submit</button>
      </form>
    </div>
    <% } %>

    <div class="row mt-5">
      <h4 class="mb-3">All Reviews</h4>
      <% for(let review of listing.reviews) { %>
      <div class="col-md-6 mb-4 d-flex">
        <div
          class="card shadow-sm border-0 p-3 w-100 h-100 position-relative"
          style="background-color: #f9f9f9"
        >
          <% if(currUser && review.author.equals(currUser._id)) {%>
          <!-- Small Delete Button -->
          <form
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            class="position-absolute top-0 end-0 m-2"
          >
            <button class="btn btn-sm btn-outline-danger" title="Delete Review">
              ✖
            </button>
          </form>
          <% } %>

          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <h5 class="card-title fw-semibold text-primary">
                @<%= review.author.username %>
              </h5>
              <p class="card-text text-muted mb-2"><%= review.comment %></p>
            </div>
            <span class="badge bg-warning text-dark mt-3 align-self-start"
              ><%= review.rating %> ★</span
            >
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
